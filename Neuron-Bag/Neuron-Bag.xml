	<CheckButton name="NeuronBackpackButton" parent="UIParent" id="0">
		<Size x="37" y="37"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentCount2" inherits="SystemFont_Shadow_Small" outline="THICK" justifyV="BOTTOM" justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="2" y="-1"/>
						</Anchor>
						<Anchor point="BOTTOMRIGHT">
							<Offset x="-2" y="1"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="BORDER">
				<Texture name="$parentIconTexture" parentKey="icon">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="-1" y="1"/>
						</Anchor>
						<Anchor point="BOTTOMRIGHT">
							<Offset x="0" y="0"/>
						</Anchor>
					</Anchors>
				</Texture>
				<FontString name="$parentCount" inherits="NumberFontNormal" justifyH="RIGHT" hidden="true">
					<Anchors>
						<Anchor point="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="-5" y="2"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentStock" inherits="NumberFontNormalYellow" justifyH="LEFT" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-2"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Model name="$parentItemAnim" inherits="ItemAnimTemplate">
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-10" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Model>
		</Frames>
		<Scripts>
			<OnLoad>
					Neuron.NeuronBackpackButton_OnLoad(self)
			</OnLoad>
			<OnReceiveDrag>
					Neuron.NeuronBackpackButton_OnReceiveDrag(self, button)
			</OnReceiveDrag>
			<OnEnter>
					Neuron.NeuronBackpackButton_OnEnter(self)
			</OnEnter>
			<OnLeave>
					Neuron.NeuronBackpackButton_OnLeave(self)
			</OnLeave>
			<OnEvent>
					Neuron.NeuronBackpackButton_OnEvent(self, event, ...)
			</OnEvent>
		</Scripts>
		<NormalTexture name="$parentNormalTexture" file="Interface\Buttons\UI-Quickslot2">
			<Size>
				<AbsDimension x="64" y="64"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="-1"/>
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<CheckedTexture alphaMode="ADD" file="Interface\Buttons\CheckButtonHilight"/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
	</CheckButton>

	<CheckButton name="Neuron___Bag0Slot" inherits="BagSlotButtonTemplate" parent="UIParent"/>
	<CheckButton name="Neuron___Bag1Slot" inherits="BagSlotButtonTemplate" parent="UIParent"/>
	<CheckButton name="Neuron___Bag2Slot" inherits="BagSlotButtonTemplate" parent="UIParent"/>
	<CheckButton name="Neuron___Bag3Slot" inherits="BagSlotButtonTemplate" parent="UIParent"/>

</Ui>
